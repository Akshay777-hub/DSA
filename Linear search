#include <stdio.h>

  int search(int n, int arr[], int s){
    int i;
    for( i=0;i<n;i++){
        if(s==arr[i]){
           return i;}}
           return 0;
        
        
       
} 
void main()
{
    int arr[20],i,n,s,r;
    printf("enter the limit of array");
    scanf("%d", &n);
    printf("enter the elements of the array");
    for(i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);}
        printf("enter the number to be searched");
    scanf("%d", &s);
       r= search(n,arr,s);
       if(r!=0)
       printf("element found at index %d", r);
       else
       printf("element not present in the array");
       
    }
    
